 {
    "$schema":"https://frontmatter.codes/config/content.snippets.schema.json",
    "$id":"https://github.com/dgmjr-io/dgmj-io/.frontmatter/config/content/snippets/imagewithcaption.json",
    {
        "title": "Image snippet",
        "description": "Image with caption",
        "body": "{{< caption src=\"[[&mediaUrl]]\" caption=\"[[caption]]\" class=\"[[className]]\" >}}",
        "isMediaSnippet": true,
        "fields": [
            {
                "name": "className" ,
                "title": "Class name",
                "type": "string",
                "default": "image__caption"
            },
            {
                "name":"mediaUrl",
                "title":"Media URL",
                "type":"string"
            }
        ]
    }
}